{
    "name": "rouenssi/scims-backend",
    "description": "Un CMS open-source pour les scientifiques",
    "require": {
        "slim/slim": "^3.5",
        "propel/propel": "~2.0@dev",
        "fzaninotto/faker": "^1.6"
    },
    "license": "GPL-3.0",
    "autoload": {
      "classmap": ["app/"]
    },
    "scripts": {
      "post-install-cmd": [
        "./propel sql:build",
        "./propel config:convert",
        "@composer dump-autoload"
      ],
      "create-database": [
        "./propel sql:insert",
        "\\SciMS\\Scripts\\ProductionFixture::create"
      ],
      "migrate": [
        "./propel model:build",
        "./propel diff",
        "./propel migrate",
        "php composer.phar dump-autoload",
        "\\SciMS\\Scripts\\FakeFixture::onMigrate"
      ],
      "start": [
        "php -S localhost:8080 -t app/"
      ]
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6"
    }
}
